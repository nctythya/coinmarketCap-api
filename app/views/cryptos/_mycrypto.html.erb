<div id="<%= dom_id crypto %>">
<table class="table align-middle mb-0 bg-white">
      <thead class="bg-light">
        <tr>
          <th>Name</th>
          <th>Symbol</th>
          <th>Cost_per</th>
          <th>Amount_owned</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
      <% @cryptos.each do |c| %>
        <tr>
          <td>
            <div class="d-flex align-items-center">
              <img
                  src="https://mdbootstrap.com/img/new/avatars/8.jpg"
                  alt=""
                  style="width: 45px; height: 45px"
                  class="rounded-circle"
                  />
              <div class="ms-3">
                <p class="fw-bold mb-1"><%= c.user.first_name %> <%= c.user.last_name %></p>
                <p class="text-muted mb-0"><%= c.user.email %></p>
              </div>
            </div>
          </td>
          <td>
            <p class="fw-normal mb-1"><%= c.symbol %></p>
            <p class="text-muted mb-0"><%= c.name %></p>
          </td>
          <td>
            <p class="fw-normal mb-1"><%= c.cost_per %></p>
          </td>
          <td><%= c.amount_owned %></td>
          <td>
            <%= link_to "Show", crypto_path(c), class: "btn btn-primary btn-sm btn-rounded" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>
