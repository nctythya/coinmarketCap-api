<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false} }) do |f| %>
<div class="vh-100 d-flex justify-content-center align-items-center">
      <div class="container">
        <div class="row d-flex justify-content-center">
          <div class="col-12 col-md-8 col-lg-6">
            <div class="card bg-white">
              <div class="card-body p-5">
                  <h2 class="fw-bold mb-2 text-uppercase ">Trackd</h2>
                  <p class=" mb-3">Please enter your login and password!</p>
                  <div class="mb-3">
                    <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
                  <div class="mb-3">
                    <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                  </div>
                  <div class="d-grid btn btn-outline-dark">
                    <%= f.button :submit, "Log in" %>
                  <% end %>
                  </div>
                <div>
                  <p class="mb-0  text-center">Don't have an account? <%= render "devise/shared/links" %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
